{
  "version": 2,
  "buildCommand": "npm --prefix frontend ci && npm --prefix frontend run build && npm --prefix backend ci",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "backend/server.js" }
  ]
}
